@model ProductInventory.Mvc.Models.Product
@{
    ViewData["Title"] = "Add Product";
}
<div class="container py-4">
    <h1 class="h3 fw-bold text-primary mb-3">➕ Add New Product</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <form asp-action="Create" method="post" class="row g-3">
                <div class="col-md-4">
                    <label asp-for="ProductID" class="form-label fw-semibold">Product ID</label>
                    <input asp-for="ProductID" class="form-control border-primary" placeholder="e.g. 201" autofocus />
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>

                <div class="col-md-5">
                    <label asp-for="Name" class="form-label fw-semibold">Name</label>
                    <input asp-for="Name" class="form-control border-primary" placeholder="e.g. Laptop" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Price" class="form-label fw-semibold">Price (R)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control border-primary" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4 rounded-pill">💾 Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
