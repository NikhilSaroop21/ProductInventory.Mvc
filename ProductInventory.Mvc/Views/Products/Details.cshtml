@model ProductInventory.Mvc.Models.Product
@{
    ViewData["Title"] = "Details";
}
<div class="container py-3">
    <h1 class="h4 mb-3">Product Details</h1>

    <div class="card-ui p-3 mb-3">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="text-muted small">Product ID</div>
                <div class="fs-5"><span class="badge-id">#@Model.ProductID</span></div>
            </div>
            <div class="col-md-5">
                <div class="text-muted small">Name</div>
                <div class="fs-5">@Model.Name</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Price</div>
                <div class="fs-5">R @Model.Price.ToString("0.00")</div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-primary btn-pill" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
        <a class="btn btn-outline-secondary btn-pill" asp-action="Index">Back</a>
    </div>
</div>
