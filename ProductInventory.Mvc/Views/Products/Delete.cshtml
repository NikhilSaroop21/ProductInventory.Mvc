@model ProductInventory.Mvc.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<div class="container py-3">
    <h1 class="h4 mb-3 text-danger">Delete Product</h1>

    <div class="alert alert-warning alert-ui">
        Are you sure you want to delete this product?
    </div>

    <div class="card-ui p-3 mb-3">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="text-muted small">Product ID</div>
                <div class="fs-5"><span class="badge-id">#@Model.ProductID</span></div>
            </div>
            <div class="col-md-5">
                <div class="text-muted small">Name</div>
                <div class="fs-5">@Model.Name</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Price</div>
                <div class="fs-5">R @Model.Price.ToString("0.00")</div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.ProductID" />
        <div class="d-flex gap-2">
            <button class="btn btn-danger btn-pill" type="submit">Delete</button>
            <a class="btn btn-outline-secondary btn-pill" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
