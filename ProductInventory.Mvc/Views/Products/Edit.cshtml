@model ProductInventory.Mvc.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<div class="container py-4">
    <h1 class="h4 mb-2 text-yellow">✏️ Edit Product</h1>
    <div class="text-muted-ink mb-3">Update fields below. Product ID cannot be changed.</div>

    <div class="card-ui p-3">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <form asp-action="Edit" method="post" class="row g-3">
            <input type="hidden" asp-for="ProductID" />

            <div class="col-md-4">
                <label class="form-label">Product ID</label>
                <input class="form-control" value="@Model.ProductID" readonly />
            </div>

            <div class="col-md-5">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-warning small"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Price" class="form-label">Price (R)</label>
                <div class="input-group">
                    <span class="input-group-text">R</span>
                    <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-warning small"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-yellow btn-pill">💾 Save</button>
                <a asp-action="Index" class="btn btn-orange-outline btn-pill">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
